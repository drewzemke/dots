    ],
    "deny": [],
    "ask": [],
    "defaultMode": "default"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "nu -c 'use ~/dots/nushell/functions; functions tab-bell init'"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "nu -c 'use ~/dots/nushell/functions; functions tab-bell'"
          },
          {
            "type": "command",
            "command": "nu -c 'use ~/dots/nushell/functions; functions notify \"Claude is ready!\"'"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "nu -c 'use ~/dots/nushell/functions; functions tab-bell clear'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "nu -c 'use ~/dots/nushell/functions; functions tab-bell clear'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "sh -c 'test -d .jj && jj status || exit 0'"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "nu -c 'use ~/dots/nushell/functions; functions tab-bell clear'"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "playwright@claude-plugins-official": true,
    "context7@claude-plugins-official": true
  },
  "spinnerTipsEnabled": false,
  "syntaxHighlightingDisabled": false,
  "alwaysThinkingEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754080118645
  }
}
